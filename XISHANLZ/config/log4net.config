      --><!--文件形式记录日志--><!--
      <appender-ref ref="RollingLogFileAppender"/>
      <appender-ref ref="exceptionless"/>
    </root>-->
  <logger name="INFO">
    <level value="INFO" />
    <appender-ref ref="RollingLogFileAppender" />
  </logger>
  <logger name="ERROR">
    <level value="ERROR" />
    <appender-ref ref="RollingLogErrorFileAppender" />
  </logger>
